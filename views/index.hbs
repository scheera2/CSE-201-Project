<table class="table table-striped table-bordered" style="width: 90%; margin-left: 5%;">
    <tr>
        
        {{#each fields}}
        <th><a href="?filter={{this.name}}">{{this.name}} &#8597;</a>
            <form method="post">
                <input class="form-control" type="text" name="{{this.name}}_filter" />
            </form>
        </th>
        {{/each}}
        
    </tr>
    {{#each rows}}
    <tr>
        {{#each this}}
        <td>{{this}}</td>
        {{/each}}
    </tr>
    {{/each}}
</table>