{{#if user.admin}}
<h1>Pending Submissions</h1>

<h3 style="margin-left: 5%;">Search</h3>
<form method="post">
    <input class="form-control" type="text" name="search_bar" style="width: 90%; margin-left: 5%;" />
</form>

<hr>

<table class="table table-striped table-bordered" style="width: 90%; margin-left: 5%;">
    <tr>

        {{#each fields}}
        <th><a href="?filter={{this.name}}">{{this.name}} &#8597;</a>
            <form method="post">
                <input class="form-control" type="text" name="{{this.name}}_filter" />
            </form>
        </th>
        {{/each}}
        <th>ACCESS</th>


    </tr>
    {{#each rows}}
    <tr>
        <td>
            {{this.ID}}
        </td>
        <td>
            {{this.Name}}
        </td>
        <td>
            {{this.Description}}
        </td>
        <td>
            {{this.Developer}}
        </td>
        <td>
            {{this.Platform}}
        </td>
        <td>
            {{this.Version}}
        </td>
        <td>
            {{this.Price}}
        </td>
        <td>
            {{this.Submitter}}
        </td>
        <td>
            <form action='/users/pending/approve' method="post">
                <button class="btn btn-primary mb-2" type='submit' value='{{this.Name}}' name='approve'>Approve</button>
            </form>
            <form action="/users/pending/deny" method='post'>
                <button class="btn btn-danger mb-2" type='submit' value='{{this.Name}}' name='deny'>Deny</button>
            </form>
        </td>
    </tr>
    {{/each}}
</table>
{{/if}}
<a class="btn btn-primary mb-2" href="/" style="margin-left: 5%;">Back</a>