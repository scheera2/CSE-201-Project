<div class="container">
    <h1>Password Change</h1>
  {{#each errors}}
  <div class="alert alert-danger">
    {{this}}
  </div>
  {{/each}}
  <form method="post">
    <div class="form-group">
      <label for="password">Old Password</label>
      <input class="form-control" id="password" type="password" name="old_password" />
    </div>
    <div class="form-group">
      <label for="password">New Password</label>
      <input class="form-control" id="password" type="password" name="new_password" />
    </div>
    <div class="form-group">
      <label for="password">Confirm New Password</label>
      <input class="form-control" id="password" type="password" name="new_password_conf" />
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>
</div>